    <Section title="Solar y Powerwall" color="#1">
      <p slot="subtitle" class="text-sm">Energía para todos</p>

      <footer slot="footer" class="[&>a]:w-[264px] text-[#eee] pb-16 flex">
        <a
          class="py-2.5 font-medium backdrop-blur-sm bg-black/60 rounded-md text-sm hover:bg-white/60 hover:text-[#111] transition-colors"
          href="#">Saber más</a
        >
      </footer>

      <img
        slot="background"
        class="object-cover min-h-full brightness-90"
        src="../../public/solarPanels.avif"
      />
    </Section>

    <Section title="Accesorios" color="#111">
      <footer
        slot="footer"
        class="[&>a]:w-[264px] text-[#eee] pb-24 flex flex-col items-center gap-14"
      >
        <a
          class="py-2.5 font-medium backdrop-blur-sm bg-black/60 rounded-md text-sm hover:bg-white/60 hover:text-[#111] transition-colors"
          href="#">Comprar Ahora</a
        >

        <ul class="[&>li>a]:text-[#eee] list-none text-xs flex gap-4">
